@import "./site.styl"

.ifiinvest-label
  font-size 1.2em
  font-weight bold
  margin-right 10px

.ifiinvest-entry
  margin-right 10px

.axis path, .axis line, .axis text
  fill none
  stroke lightsteelblue

.axis path, .axis line
  shape-rendering crispEdges

.area
  fill steelblue

.line
  fill none
  stroke orange
  stroke-width 1.5px

.dot
  fill white
  stroke orange
  stroke-width 1.5px